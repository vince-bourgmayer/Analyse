extends layout

block content
  if (!user)
    .container
        div.row
            .col-md-4.col-md-offset-2
                form(role='form', action="/register",method="post", style='max-width: 300px;')
                    h1.text-right Register page
                    br
                    .form-group
                        input.form-control(type='text', name="username", placeholder='Enter Username')
                    .form-group
                        input.form-control(type='password', name="password", placeholder='Password')
                    a(href='/')
                        button.btn.btn-default(type="button") Cancel
                    &nbsp;
                    button.btn.btn-primary(type='submit') Submit
                    br
                h4= info
            .col-md-4
                form(role='form', action="/login",method="post", style='max-width: 300px;')
                    h1.text-left Login page
                    br
                    .form-group
                        input.form-control(type='text', name="username", placeholder='Enter Username')
                    .form-group
                        input.form-control(type='password', name="password", placeholder='Password')
                    #button.pull-right
                        a(href='/')
                            button.btn.btn-default(type="button") Cancel
                        &nbsp;
                        button.btn.btn-primary(type='submit') Submit
  if (user)
    .container-fluid
        div.row
            .col-md-6.col-md-offset-3
                h1.text-center Hello #{user.username} !
                h3.text-center Welcome in Chart's App
                br
        div.row
            a(href="/survey") 
                button.btn.btn-default.btn-lg.btn-block(type='button') Manage your surveys
            br
            a(href="/myData") 
                button.btn.btn-default.btn-lg.btn-block(type='button') Manage your datas
            br
            a(href="/charts") 
                button.btn.btn-default.btn-lg.btn-block(type='button') Go to chart's space
            br
            a(href="/account") 
                button.btn.btn-default.btn-lg.btn-block(type='button') Manage your account
            br
            a(href="/myCommunities") 
                button.btn.btn-default.btn-lg.btn-block(type='button') Manage your communities
            br
            a(href="/logout") 
                button.btn.btn-primary.btn-lg.btn-block(type='button') Logout